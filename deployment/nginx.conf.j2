upstream blog-server {
    server localhost:{{APP_PORT}};
}


server {
  server_name {{DOMAIN}};
  client_max_body_size 100M;

  location / {
    proxy_pass http://blog-server;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_redirect off;
  }
}

